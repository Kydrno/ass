my_string = input('добрый вечер, какая температура за окном ')
print(len('добрый вечер, какая температура за окном'))
print('добрый вечер, какая температура за окном'.upper())
print('добрый вечер, какая температура за окном'.lower())
print('добрый вечер, какая температура за окном'.replace(' ', ''))
print('добрый вечер, какая температура за окном' [0])
print('добрый вечер, какая температура за окном' [-1])
